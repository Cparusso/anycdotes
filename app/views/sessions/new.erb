<h2></h2>

<div class="signinboxcontainer">
  <div class="ui placeholder segment">
    <div class="ui two column very relaxed stackable grid">
      <div class="column">
        <%= form_tag sessions_path, class: "ui form" do %>
        <div class="field">
          <%= label_tag :username %>
          <div class="ui left icon input">
            <%= text_field_tag :username %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= label_tag :password %>
          <div class="ui left icon input">
            <%= password_field_tag :password %>
            <i class="lock icon"></i>
          </div>
        </div>
         <div class: "ui submit button">
           <%= submit_tag "Sign In", class: "ui submit button" %>
         </div>
         <% end %>
      </div>
      <div class="middle aligned column signinbutton">
        <div class="ui big button">
          <i class="signup icon"></i>
          <a href="/users/new">Sign Up</a>
        </div>
      </div>
      <div class="ui vertical divider">
        Or
      </div>
    </div>
  </div>
</div>
