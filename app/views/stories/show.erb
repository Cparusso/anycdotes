<h1><%= @story.title %></h1>
<% if @story.user %>
  <div>- <%= link_to @story.user.username, @story.user %></div>
<% else %>
  <div>- This user has deleted their profile.</div>
<% end %>

<h2><%= link_to @story.location.neighborhood, @story.location %></h2>

<div> <%= @story.content %> </div>

<div>Tags:</div>
<% @story.tags.each do |tag| %>
  <div> <%= link_to tag.tag_name, tag %> </div>
<% end %>


<h2>Comments</h2>

<%= render partial: "comments/form" %>

<% if @story.comments %>
  <ol>
    <% @story.comments.reverse.each do |comment| %>
    <li><%= comment.content %></li>
    Written By: <%= link_to comment.user.username, user_path(comment.user) %>
     | <%= comment.created_at.strftime("%B %d, %Y") %>
       <% if current_user == comment.user %>
         <%= link_to 'Delete', comment, method: :delete %> | <%= link_to 'Edit', edit_comment_path(comment) %>
       <% end %>
    <% end %>
  </ol>
<% end %>
