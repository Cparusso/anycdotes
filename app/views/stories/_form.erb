<% if flash[:errors] %>
  <ul>
  <% flash[:errors].each do |e| %>
    <li><%= e %></li>
  <% end %>
  </ul>
<% end %>

<%= form_for @story do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :content %>
  <%= f.text_area :content %>
  <%= f.collection_select :location_id, Location.all, :id, :neighborhood %>
  <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :tag_name %>
  <%= f.submit %>
<% end %>
