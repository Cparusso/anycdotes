<!DOCTYPE html>
<html>
  <head>
    <title>Anycdotes</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/1.11.8/semantic.min.css" />
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/1.11.8/semantic.min.js"></script>

    <meta charset="utf-8">
    <link href="https://fonts.googleapis.com/css?family=Lora" rel="stylesheet">
  </head>

  <body>
    <div class="ui inverted segment menubar">


    <div class="ui inverted secondary pointing menu topnav">
      <a class="item active" href="../stories">
        Home
      </a>
      <a class="item" href="<%= logged_in? ? '../users/current_user.id' : '../login' %>">
        Profile
      </a>
      <a class="item" href="../users">
        Users
      </a>
      <a class="item" href="../locations">
        Locations
      </a>
      <a class="item" href="../tags">
        Tags
      </a>
      <div class="topnav-right">
        <% if logged_in? %>
          <a class="ui button newstory" href="../stories/new">
            New Story
          </a>
        <% end %>
        <% if !logged_in? %>
          <a class="item" href="../login">
            Sign In or Sign Up
          </a>
          <% else %>
          <a class="item signinorout" rel="nofollow" data-method="delete" href="/sessions">
            Sign Out
          </a>
        <% end %>
      </div>
    </div>
    </div>
    <%= yield %>
  </body>
</html>
